<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.bw.framework.ToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E91E63"
        app:left_show="true"
        app:left_src="@drawable/ic_dehaze_black_24dp"
        app:right_show="true"
        app:right_show_only_img="true"

        app:right_src="@drawable/ic_search_gray_24dp"
        app:title_show="true"
        app:title_text="头条" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <RadioButton
            style="@style/RadioButtonStyle"
            android:text="新闻"
            android:drawableTop="@drawable/news_btn"
            android:id="@+id/homeBtn"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/image_btn"
            android:id="@+id/imageBtn"
            android:text="图片"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/video_btn"
            android:id="@+id/videoBtn"
            android:text="视频"/>

        <RadioButton
            style="@style/RadioButtonStyle"
            android:id="@+id/touBtn"
            android:drawableTop="@drawable/tou_btn"
            android:text="头条号"/>


    </RadioGroup>

</LinearLayout>
