<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity"
    android:id="@+id/draw"
    >
   <LinearLayout
       style="@style/match"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toobar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_50dp"
            android:background="@color/color_orange"
            ></androidx.appcompat.widget.Toolbar>
        <FrameLayout
            android:id="@+id/home_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            ></FrameLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/color_write_5"
           ></View>
        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/common"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_60dp"
            app:tl_textUnselectColor="@color/color_gray_1"
            app:tl_textSelectColor="@color/color_blue_6"
            />

   </LinearLayout>

     <LinearLayout
         android:layout_gravity="left"
         android:layout_width="@dimen/dimens_300dp"
         android:layout_height="match_parent"
         android:background="@color/color_draw"
         android:orientation="vertical"
         android:clickable="true"
          >

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:scaleType="fitXY"
             android:src="@mipmap/error_image"
             ></ImageView>

         <TextView
             android:id="@+id/draw_switch"
             style="@style/draw_text_top"
             android:drawableLeft="@drawable/ic_night_gray_24dp"
             android:text="@string/qiehuan_name"
             android:textColor="@color/color_draw_text"
             ></TextView>

         <TextView
             android:id="@+id/draw_setting"
             style="@style/draw_text_top"
             android:drawableLeft="@drawable/ic_setting_gray_24dp"
             android:text="@string/setting_name"
             android:textColor="@color/color_draw_text"
             ></TextView>

         <TextView
             android:id="@+id/draw_share"
             style="@style/draw_text_top"
             android:drawableLeft="@drawable/ic_share_grey_24dp"
             android:text="@string/share_name"
             android:textColor="@color/color_draw_text"
             ></TextView>
     </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>