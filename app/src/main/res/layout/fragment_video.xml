<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_write_5">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50dp"
        android:background="@color/color_orange"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/color_write"
        app:tabSelectedTextColor="@color/color_write"
        app:tabTextColor="@color/color_write_8"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>