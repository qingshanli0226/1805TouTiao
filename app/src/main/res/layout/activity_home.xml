<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:id="@+id/home_frame"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="11"
            >
        </FrameLayout>
        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/home_commons"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            app:tl_indicator_height="0dp"
            app:tl_textSelectColor="#5A727D"
            app:tl_textUnselectColor="#5F5F5F"
            android:background="#424242"
            app:tl_iconHeight="35dp"
            app:tl_iconWidth="35dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            >
        </com.flyco.tablayout.CommonTabLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:clickable="true"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/error_image"
                android:scaleType="fitXY"
                >
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_night_gray_24dp"
                    ></ImageView>
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/homeswitch"
                    android:text="切换主题"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_setting_gray_24dp"
                    ></ImageView>
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlack"
                    android:text="设置"
                    android:id="@+id/homeset"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_grey_24dp"
                    ></ImageView>
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlack"
                    android:text="分享"
                    android:id="@+id/homeshare"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>