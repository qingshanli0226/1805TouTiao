<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_news_child_height"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_child_pic_head"
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="left"/>
        <TextView
            android:id="@+id/item_child_pic_provenance"
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:textSize="@dimen/Text_middle"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="5"/>
        <ImageView
            android:id="@+id/item_child_pic_share"
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:src="@drawable/ic_baseline_more_horiz_24"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_child_pic_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_news_child_height2"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="@dimen/Text_middle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_news_child_height3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/item_child_pic_photo_one"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/item_child_pic_photo_two"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/item_child_pic_photo_three"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_divider"/>
</LinearLayout>