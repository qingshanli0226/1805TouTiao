<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/silde_head"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_height"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/theme_margin_top">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/theme_margin_left"
            android:src="@drawable/moon"></ImageView>
        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#000"
            android:paddingLeft="@dimen/theme_text_margin_left"
            android:text="@string/theme_title"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_height"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/theme_margin_top">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/theme_margin_left"
            android:src="@drawable/sheizhi"></ImageView>
        <TextView
            android:id="@+id/tv_she"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#000"
            android:paddingLeft="@dimen/theme_text_margin_left"
            android:text="@string/she_title"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_height"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/theme_margin_top">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/theme_margin_left"
            android:src="@drawable/fen"></ImageView>
        <TextView
            android:id="@+id/tv_fen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#000"
            android:paddingLeft="@dimen/theme_text_margin_left"
            android:text="@string/fen_title"></TextView>
    </LinearLayout>
</LinearLayout>